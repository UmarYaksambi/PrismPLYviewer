<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 3D Model View -->
        <com.prism.plyviewer360.ModelView
            android:id="@+id/modelView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <!-- Instructions Overlay (shows when no model loaded) -->
        <LinearLayout
            android:id="@+id/instructionsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp"
            android:background="#AA000000">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@android:drawable/ic_menu_upload"
                app:tint="#FFFFFF"
                android:contentDescription="Upload icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="PLY Viewer 360°"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tap the button below to load a PLY file"
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="• Drag to rotate 360°\n• Pinch to zoom\n• Supports ASCII and binary PLY"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:gravity="start" />
        </LinearLayout>

        <!-- Control Bar -->
        <LinearLayout
            android:id="@+id/controlBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#DD000000"
            android:gravity="center"
            android:visibility="gone">

            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Reset View"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnAutoRotate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Auto Rotate"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnLoadNew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Load New"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Load PLY file"
        app:tint="#FFFFFF" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>